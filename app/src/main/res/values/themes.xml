<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gollect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FCC394</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="bgc">#FFFFFF</item>
        <item name="tC">#000000</item>
        <item name="btnC">#FCC394</item>
        <item name="bckImg">@drawable/ic_background</item>
        <item name="modeString">Light Mode</item>

    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FFD98F</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="bgc">#000000</item>
        <item name="tC">#FFFFFF</item>
        <item name="btnC">#FFD98F</item>
        <item name="bckImg">@drawable/ic_dark_background</item>
        <item name="modeString">Dark Mode</item>
    </style>



    <style name="Theme.Gollect.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Gollect.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Gollect.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>